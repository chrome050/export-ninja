{
    "ConnectionStrings": {
        "Database": "server=localhost;database=employees;user=root;password=password"
    },
    "Serilog": {
        "Using": [
            "Serilog.Sinks.Console",
            "Serilog.Sinks.File"
        ],
        "MinimumLevel": "Debug",
        "WriteTo": [
            {
                "Name": "Console"
            },
            {
                "Name": "File",
                "Args": {
                    "path": "logs/log-.txt",
                    "rollingInterval": "Day"
                }
            }
        ],
        "Enrich": [
            "WithMachineName"
        ]
    }
}